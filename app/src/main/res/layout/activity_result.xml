<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".ResultActivity">
        <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/btn_main"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="메인화면"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:textSize="30dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="평면도"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:id="@+id/picName"
                    android:textSize="50dp"/>

            </RelativeLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="400dp"
                android:id="@+id/image"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"/>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="평수 : "
                android:textSize="35dp"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="15dp"/>

            <TextView
                android:id="@+id/db_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:textSize="35dp"
                android:hint="일단 임시로 적어봄"
                android:inputType="textPersonName"
                android:layout_alignBaseline="@id/text_size"
                android:layout_toRightOf="@+id/text_size"
                android:layout_marginLeft="70dp"/>

            <TextView
                android:id="@+id/text_direction"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="종류 : "
                android:textSize="35dp"
                android:layout_below="@id/text_size"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="15dp"/>

            <TextView
                android:id="@+id/db_direction"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:textSize="35dp"
                android:hint="일단 임시로 적어봄"
                android:inputType="textPersonName"
                android:layout_below="@id/text_size"
                android:layout_alignBaseline="@id/text_direction"
                android:layout_toRightOf="@id/text_direction"
                android:layout_marginLeft="70dp"/>

            <TextView
                android:id="@+id/text_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="매매가 : "
                android:textSize="35dp"
                android:layout_below="@id/text_direction"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="15dp"/>

            <TextView
                android:id="@+id/db_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/text_direction"
                android:layout_alignBaseline="@id/text_price"
                android:layout_alignStart="@+id/db_direction"
                android:layout_toRightOf="@id/text_price"
                android:ems="10"
                android:hint="일단 임시로 적어봄"
                android:inputType="textPersonName"
                android:textSize="35dp" />

            <TextView
                android:id="@+id/text_lease"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="판매형태 : "
                android:textSize="35dp"
                android:layout_below="@id/text_price"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="15dp"/>

            <TextView
                android:id="@+id/db_lease"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/text_price"
                android:layout_alignBaseline="@id/text_lease"
                android:layout_alignStart="@+id/db_direction"
                android:layout_toRightOf="@id/text_lease"
                android:ems="10"
                android:hint="일단 임시로 적어봄"
                android:inputType="textPersonName"
                android:textSize="35dp" />

            <TextView
                android:id="@+id/text_loc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="호수 : "
                android:textSize="35dp"
                android:layout_below="@id/text_lease"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="15dp"/>

            <TextView
                android:id="@+id/db_loc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/text_lease"
                android:layout_alignBaseline="@id/text_loc"
                android:layout_alignStart="@+id/db_direction"
                android:layout_toRightOf="@id/text_loc"
                android:ems="10"
                android:hint="일단 임시로 적어봄"
                android:inputType="textPersonName"
                android:textSize="35dp" />

            <TextView
                android:id="@+id/text_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="번호 : "
                android:textSize="35dp"
                android:layout_below="@id/text_loc"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="15dp"/>

            <TextView
                android:id="@+id/db_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/text_loc"
                android:layout_alignBaseline="@id/text_phone"
                android:layout_alignStart="@+id/db_direction"
                android:layout_toRightOf="@id/text_phone"
                android:ems="10"
                android:hint="일단 임시로 적어봄"
                android:inputType="textPersonName"
                android:textSize="35dp" />

            <TextView
                android:id="@+id/text_option"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="옵션 : "
                android:textSize="35dp"
                android:layout_below="@id/text_phone"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="15dp"/>

            <TextView
                android:id="@+id/db_option"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/text_phone"
                android:layout_alignBaseline="@id/text_option"
                android:layout_alignStart="@+id/db_direction"
                android:layout_toRightOf="@id/text_option"
                android:ems="10"
                android:hint="일단 임시로 적어봄"
                android:inputType="textPersonName"
                android:textSize="35dp" />

            <TextView
                android:id="@+id/text_etc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="기타 : "
                android:textSize="35dp"
                android:layout_below="@id/text_option"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="15dp"/>

            <TextView
                android:id="@+id/db_etc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/text_option"
                android:layout_alignBaseline="@id/text_etc"
                android:layout_alignStart="@+id/db_direction"
                android:layout_toRightOf="@id/text_etc"
                android:ems="10"
                android:hint="일단 임시로 적어봄"
                android:inputType="textPersonName"
                android:textSize="35dp" />

             <Button
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="이전 건물"
                 android:textSize="35dp"
                 android:id="@+id/btn_pre"
                 android:layout_below="@+id/text_etc"
                 android:layout_marginTop="20dp"
                 android:layout_alignParentLeft="true"
                 android:layout_marginLeft="200dp"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="다음 건물"
                android:textSize="35dp"
                android:id="@+id/btn_next"
                android:layout_below="@id/text_etc"
                android:layout_marginTop="20dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="200dp"/>

        </RelativeLayout>
    </LinearLayout>
</ScrollView>